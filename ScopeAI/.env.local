# ScopeAI Super Simple Local Development Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_BASE_URL=http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Security (development keys)
SECRET_KEY=dev-secret-key-for-local-only
JWT_SECRET=dev-jwt-secret-for-local-only

# External APIs (add your keys here)
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Feature flags
ENABLE_MOCK_DATA=true
ENABLE_SIMPLE_MODE=true
